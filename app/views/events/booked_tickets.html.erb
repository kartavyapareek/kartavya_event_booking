<!-- app/views/tickets/my_booked_tickets.html.erb -->

<h1>Your Booked Tickets</h1>

<% if @booked_tickets.any? %>
  <table border="1">
    <thead>
      <tr>
        <th>Event</th>
        <th>Ticket ID</th>
        <th>Booking Date</th>
        <th>Quantity</th>
      </tr>
    </thead>
    <tbody>
      <% @booked_tickets.each do |ticket| %>
        <tr>
          <td><%= ticket.event.name %></td>
          <td><%= ticket.id %></td>
          <td><%= ticket.created_at.strftime("%B %d, %Y %H:%M") %></td>
          <td><%= ticket.quantity %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>You haven't booked any tickets yet.</p>
<% end %>

<%= link_to 'Back to Events', events_path %>
